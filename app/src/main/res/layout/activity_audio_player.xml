<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AudioPlayer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/llup"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/expand"
                android:src="@drawable/ic_expand"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/expand"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="Book Name.."
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/menu"
                android:src="@drawable/ic_menu"
                android:backgroundTint="@color/white"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/audio_image"
            android:layout_marginBottom="8dp"
            android:layout_width="321dp"
            android:padding="2dp"
            android:elevation="20dp"
            android:layout_height="321dp"
            android:background="@drawable/round_corner"
            android:src="@drawable/book_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Name.."
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:singleLine="true"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/audio_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author Name.."
            android:textSize="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/audio_author"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:progressBackgroundTint="@color/primary_50"
                android:layout_marginBottom="40dp"
                android:layout_width="300dp"
                android:thumbTint="@color/primary_50"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtsstart"
                android:layout_toLeftOf="@+id/seekbar"
                android:layout_centerInParent="true"
                android:layout_below="@+id/seekbar"
                android:layout_marginLeft="8dp"
                android:text="00:00"
                android:textColor="@color/primary_20"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtsstop"
                android:layout_toRightOf="@+id/seekbar"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="false"
                android:layout_marginRight="8dp"
                android:text="04:10"
                android:textColor="@color/primary_20"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lldown"
        android:orientation="vertical"
        android:layout_below="@+id/llup">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/playbtn"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_play"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button
                android:id="@+id/btnff"
                android:layout_toRightOf="@+id/playbtn"
                android:background="@drawable/ic_forward"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/btn_upload"
                android:layout_toRightOf="@+id/btnff"
                android:background="@drawable/ic_upload"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/btn_volume"
                android:layout_toLeftOf="@+id/btnfr"
                android:background="@drawable/ic_volume"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <Button
                android:id="@+id/btnfr"
                android:layout_toLeftOf="@id/playbtn"
                android:background="@drawable/ic_revind"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lldown">
        <Button
            android:id="@+id/btn_speed"
            android:layout_toRightOf="@id/btn_next_chapter"
            android:background="@drawable/ic_speed"
            android:layout_marginLeft="32dp"
            android:layout_width="60dp"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btn_download"
            android:layout_toRightOf="@+id/btn_speed"
            android:background="@drawable/ic_download"
            android:layout_marginLeft="32dp"
            android:layout_width="60dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn_next_chapter"
            android:layout_toRightOf="@+id/btn_bookmark"
            android:background="@drawable/ic_chapter"
            android:layout_marginLeft="32dp"
            android:layout_width="60dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn_bookmark"
            android:background="@drawable/ic_bookmark"
            android:layout_alignParentLeft="true"
            android:layout_width="60dp"
            android:layout_height="50dp"/>

    </RelativeLayout>

</RelativeLayout>